{
  "name": "discord-remote-chat-bot",
  "version": "0.1.0",
  "description": "Minimal Discord bot that sends JSON prompts to an LLM via HTTP and returns JSON responses (TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "vitest run"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "csv-parse": "^5.4.0",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "ollama": "^0.6.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "cross-fetch": "^3.1.8",
    "eslint": "^8.47.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "discord-remote-chat-bot": "./bin/discord-remote-chat-bot.js"
  }
}
